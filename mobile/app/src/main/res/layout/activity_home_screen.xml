<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/status"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="90dp">

            <TextView
                android:id="@+id/text_view_welcome_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="24sp"
                android:textColor="@color/green_dark"
                android:textStyle="bold"
                android:layout_marginBottom="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_picture"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detect_food"
                android:textColor="@color/green_light"
                app:strokeColor="@color/green_light"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/assistant"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_assistant"
                android:textColor="@color/green_light"
                app:strokeColor="@color/green_light"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/log_recipe"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_food_journal"
                android:textColor="@color/green_light"
                app:strokeColor="@color/green_light"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/my_recipes"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_recipes"
                android:textColor="@color/green_light"
                app:strokeColor="@color/green_light"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/text"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_doctor"
                android:textColor="@color/green_light"
                app:strokeColor="@color/green_light"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/calender"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mark_date"
                android:textColor="@color/green_light"
                app:strokeColor="@color/green_light"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/guide"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Guide"
                android:textColor="@color/green_light"
                app:strokeColor="@color/green_light"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/scan"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan Barcode"
                android:textColor="@color/green_light"
                app:cornerRadius="8dp"
                app:strokeColor="@color/green_light"
                android:layout_marginBottom="12dp" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/status"
        layout="@layout/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
